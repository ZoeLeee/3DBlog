{
    "compilerOptions": {
        "paths": {
            "*": [
                "types/*"
            ],
            "@/*": [
                "src/*"
            ]
        },
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node"
        ],
        "sourceMap": true,
        "jsx": "react",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "rootDir": "./",
        "baseUrl": "./",
        "skipLibCheck": true,
        "declaration": true,
        "noEmitOnError": false,
        "emitDeclarationOnly": true,
        "strictNullChecks": false
    },
    "exclude": [
        "node_modules"
    ]
}